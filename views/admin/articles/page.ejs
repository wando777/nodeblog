<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../../partials/header') %>
</head>
<%- include ('../../partials/homenavbar') %>

    <body>
        <div class="container"><br>
            <% result.articles.rows.forEach(article=> { %>
                <br>
                <div class="card">
                    <div class="card-header">
                        <h3>
                            <%= article.title %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-success">Read article</a>
                    </div>
                </div>
                <% }) %>

                    <div class="row">
                        <div class="col col-9">

                            <% if(result.page > 1) {%>
                                <a style="float: left" href="/articles/page/<%= result.page - 1 %>"> << Back </a>
                            <% } else {%>
                                <a style="float: left" href="/>"> << Back </a>
                            <%}%>

                            <% if (result.next) {%>
                                <a style="float: right" href="/articles/page/<%= result.page + 1 %>">Next >></a>
                            <%}%>
                        </div>
                        <hr>
                    </div>

        </div>

    </body>
    <%- include ('../../partials/footer') %>

</html>